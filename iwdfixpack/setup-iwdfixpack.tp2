    LPF CLONE_EFFECT INT_VAR multi_match = 1 match_opcode = 142 opcode = 254 parameter2 = 0 timing = 1 duration = 0 STR_VAR insert = first resource = chance END
    PATCH_IF game_is_totlm BEGIN
      LPF DELETE_EFFECT INT_VAR match_opcode = 206 match_parameter2 = 0 STR_VAR match_resource = EVAL "%SOURCE_RES%" resource = EVAL "%SOURCE_RES%" END // delete, handled by 254
    END ELSE BEGIN
      LPF CLONE_EFFECT INT_VAR multi_match = 1 match_opcode = 142 opcode = 206 parameter2 = 0 STR_VAR insert = last resource = chance END // add 206 vs. chance
    END
  END    
  BUT_ONLY
  
